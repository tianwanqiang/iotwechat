.container1 {
  height: 100%;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  justify-content: space-between;
  /*padding: 90rpx 0;*/
  box-sizing: border-box;
  font-size: 16px;
}

.input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.btn-confirm {
  width: 100%;
  color: #2c2;
  text-align: center;
}

page {
  background-color: #fff;
  /* height: 100%; */
}

.scan {
  height: 200px;
}

.clearfix {
  clear: both;
  height: 0;
  font: 0/0 Arial;
  overflow: hidden;
  visibility: hidden;
}



.iconfont {
  font-size: 26px;
}


.item {
  color: #787878;
  border-top: 1px solid #eee;
  font-size: 14px;
  border-bottom: 1px solid #eee;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  /* background-color: #eee; */
}

.item_middle {
  flex: 1;
  padding-left: 20rpx;
  padding-top: 5px;
  overflow: hidden;
}

.item_middle view {
  margin-top: 5rpx;
  margin-bottom: 15rpx;
}

.item_right .action {
  text-align: right;
  margin-right: 15rpx;
}

.quickUp{
	position:fixed;
	height:45px;
	font-size:18px;
	width:120px;
	background:#3366CC;
	border-radius:15px;
	text-align:center;
	line-height:45px;
	left:50%;
	margin-left:-60px;
	color:#fff;
	transition: 0.7s all linear
}
.quickUp1{
	bottom:10px;
}
.quickUp2{
	bottom: -80px
}