  searchGroupInfo: function() {
    var that = this;
    wx.request({
      url: app.getBaseUrl() + 'gps/wechat/gps/statusCount',
      method: "GET",
      header: {
        'X-NameSpace-Code': 'sit',
        'X-MicroService-Name': 'iot-gate-zuul'
      },
      data: {
        key: wx.getStorageSync('appkey')
      },
      success: function(res) {
        // if (res.data.msg) {
        //   wx.showModal({
        //     title: '警告',
        //     content: res.data.msg,
        //   })
        //  }
        if (res.data.success == true) {
          var arryres = JSON.parse(res.data.object);
          var run = 0,
            stay = 0,
            off = 0,
            sum = 0;
          for (var i in arryres) {
            var status = arryres[i].status;
            var count = arryres[i].count;
            sum += count;
            if (status == 0 || status == 4) //离线
              off += count;
            if (status == 1) //行驶
              run += count;
            if (status == 2) { //停车
              stay += count;
            }
          }
          that.setData({
            allcar: sum,
            olcar: run,
            offcar: off,
            pcar: stay
          });
        }
      }
    })
  },

  //滑动查询列表
  fetchSearchList: function(items, queryIndex, platstat) {

    let that = this;
    searchPageNum = that.data.searchPageNum; //把第几次加载次数作为参数  
    callbackcount = that.data.callbackcount; //返回数据的个数
    wx.request({
      url: app.getBaseUrl() + 'gps/wechat/gps/queryDeviceBath', //实时监控
      header: {
        'X-NameSpace-Code': 'sit',
        'X-MicroService-Name': 'iot-gate-zuul'
      },
      method: "GET",
      data: {
        currentPage: searchPageNum,
        pageSize: callbackcount,
        items: items, //查询参数集合
        queryType: queryIndex, //查询类型
        carState: platstat,
        key: wx.getStorageSync('appkey')
      },
      success: function(res) {
        
        if (res.data.msg =='key is null!'){
          wx.showModal({
            content: '登录过期，请重新登录',
            icon:'none'
          })
          return;
        }
        var isSuccess = res.data.success;
        var s_obj = JSON.parse(res.data.object);
        if (isSuccess==false) {
          that.setData({
            val: '',
            isFromSearch: true, //第一次加载，设置true  
            searchLoading: false, //把"上拉加载"的变量设为true，显示  
            searchLoadingComplete: false //把“没有数据”设为false，隐藏
          });
          wx.showToast({
            title: '设备不存在或无数据',
            icon: 'none',
            duration: 3000
          });
          return;
        } else {
          if (s_obj.length !== 0 && s_obj.length != undefined) {
            let searchList = [];
            //UtilCommon.formatTime(new Date(arrs[0].gpsTime))
            //如果isFromSearch是true从data中取出数据，否则先从原来的数据继续添加  
            that.data.isFromSearch ? searchList = s_obj : searchList = that.data.forecast.concat(s_obj);


            if (s_obj.length < that.data.callbackcount) {
              that.setData({
                val: '',
                forecast: searchList, //获取数据数组  
                searchLoadingComplete: true, //把“没有数据”设为true，显示  
                searchLoading: false
              });
            } else {
              that.setData({
                val: that.data.val,
                forecast: searchList, //获取数据数组  
                searchLoading: true //把"上拉加载"的变量设为false，显示  
              });
            }
          } else {
            wx.showToast({
              title: '查询无数据,即将返回搜索页面',
              icon: 'none',
              duration: 3000
            })
            setTimeout(function() {
              wx.navigateTo({
                url: './searchItem/searchPage',
              })
            }, 2000)

          }
        }

      },
      fail: function(err) {
        wx.showToast({
          title: '网络异常请重试',
          duration: 3000,
          icon: "none"
        })
      }
    });
  },

  //查询地图分布
  searchPointList: function (lat,lng, platstat) {

    let that = this;
      wx.request({
      url: app.getBaseUrl() + 'gps/wechat/gps/queryByPosition', //根据坐标查询附近设备
      header: {
        'X-NameSpace-Code': 'sit',
        'X-MicroService-Name': 'iot-gate-zuul'
      },
      method: "GET",
      data: {
        lat: lat, //查询类型
        lng: lng,
        carState: platstat,
        radius: 100000, 
        key: wx.getStorageSync('appkey')
      },
      success: function (res) {
         
        if (res.data.msg == 'key is null!'|| res.data.msg =='key not exists') {
          wx.showModal({
            content: '登录过期，请重新登录',
            icon: 'none'
          })
          return;
        }
        var isSuccess = res.data.success;
        
        var s_obj = res.data.object;
       
         if (isSuccess == false) {
          // that.setData({
            
           
          // });
          wx.showToast({
            title: '设备不存在或无数据',
            icon: 'none',
            duration: 3000
          });
          return;
        } else {
           
          if (s_obj.length !== 0 && s_obj.length != undefined) {
            let markers = that.data.markers;
            let circles = []
            circles.push({
              latitude:lat,
              longitude:lng,
              fillColor:'#0000003a',
              radius: 100000,
              strokeWidth:2
            })
          
       
             for(let i =0;i< s_obj.length;i++){
               let marker = new Object();
               marker.latitude =  s_obj[i].lat;
               marker.longitude = s_obj[i].lng;
               marker.iconPath = "/Image/address.png";
               markers.push(marker);
             }
             that.setData({
               markers: markers,
               scale:8,
               longitude:lng,
               latitude:lat,
               circles: circles
             })
          } else {
            wx.showToast({
              title: '查询无数据',
              icon: 'none',
              duration: 3000
            })
         }
        }

      },
      fail: function (err) {
        wx.showToast({
          title: '网络异常请重试',
          duration: 3000,
          icon: "none"
        })
      }
    });
  },
  hideModal: function() {
    // 隐藏遮罩层
    var animation = wx.createAnimation({
      duration: 200,
      timingFunction: "linear",
      delay: 0
    })
    this.animation = animation;
    animation.translateY(animationShowHeight).step()
    this.setData({
      animationData: animation.export(),
    })
    setTimeout(function() {
      animation.translateY(0).step()
      this.setData({
        animationData: animation.export(),
        showModalStatus: false
      })
    }.bind(this), 200)
  },


