/**app.wxss**/
@import "./Style/layout.wxss";
@import "weui.wxss";
@import "Style/iconfont.wxss";
.container {
  height: 100%; 
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: #f2f2f2;
}
/*隐藏与显示*/
.hide{
display: none;
visibility:hidden;

}
.show{
  display: block;
}
.viewHide {
  display: none;
}

.viewShow {
  display: block;
}
.container-test {
  /* height: 100%; */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 50rpx 0;
  box-sizing: border-box;
}

/*画廊*/
.gallery {
	/*margin-bottom: 100rpx;*/
	display: flex;
	justify-content: flex-start;
	flex-wrap: wrap;
  padding:0 4px;
  max-height: 220px;
  overflow-y: auto;
}
/*每张图片所占容器*/
.item {
	/* position: relative;
	margin: 5px 8px; */
  position: relative;
	margin: 5px 8px;
}
page {
  font-family: "Microsoft YaHei";
  font-size: 12px;
}
/*删除按钮*/
.delete {
 position: absolute;
	height: 20px;
	top: 0;
	width: 100%;
	background: #ccc;
	opacity: .8;
}

.delete image {
	position: absolute;
  right: 0;
  top: 0;
	width: 20px;
	height: 20px;
}

/*轮播*/

swiper.swiper {
  height: 100%;
}
.swiper-item {
    display: block;
    height: 100%;
}
.slide-image {
  height: 100%;
  width: 100%;
  display: inline-block;
  overflow: hidden;
}


/*分类*/
.index-nav {
margin-top:10px; 
width:100%;
display:flex;
flex-wrap:wrap;
}

.index-nav image {
  width: 38px;
  height: 38px;
}
.index-nav text {
  font-size: 16px;
}


view.text {
  display: flex;
  align-items: center;
  position: relative;
   padding: 10px 10px 10px 12px; 
  font-size: 15px;
  color: #656565;
}

view.text:before {
    position: absolute;
    display: block;
    content: ' ';
    left: -5px;
    width: 2px;
    height: 100%;
    background-color: #09bb07;
}
.line_y {
  width: 3px;
  height: 18px;
  display: inline-block;
  background-color: #09bb07;
}
view.text text {
  margin-left: 10px;
  line-height: 18px;
}

button{
	font-size: 32rpx;
	line-height: 72rpx;
}
.btn-block{
	width: 100%;
	line-height: 88rpx;
}
.btn-blue{
	background: #405f80;
	color: #fff;
}




