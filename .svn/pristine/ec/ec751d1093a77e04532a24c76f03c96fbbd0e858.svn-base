<view>
  <view class="input-list">
    <view class="input-item">
      <text class="input-item-label">用户名</text>
      <view class="input-item-content">
        <input type="text" auto-focus placeholder="请输入您的用户名" bindinput="userCodeBind"></input>
      </view>
    </view>
    <view class="input-item">
      <text class="input-item-label">密码</text>
      <view class="input-item-content">
        <input type="text" password="true" placeholder="请输入您的密码" bindinput="passwordBind"></input>
      </view>
    </view>
    <!-- <view class="input-item">
      <text class="input-item-label">验证码</text>
      <view class="input-item-content">
        <input type="idcard" placeholder="请输入6位手机验证码" maxlength="6" bindinput="mobileCodeBind"></input>
      </view>
    </view> -->
  </view>
    <view class="btn-submit">
    <button class="btn-block btn-blue" bindtap="getVerificationCode" disabled="{{!verificationCode}}">{{btnVCText}}</button>
  </view>
  <view class="btn-submit">
    <button class="btn-block btn-blue" bindtap="doSubmit" disabled="{{!submited}}">确认绑定</button>
  </view>
</view>