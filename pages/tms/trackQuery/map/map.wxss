.rotateAni{
  width:32px;
  height:32px;
  animation: warn 3s ease-in;
  -webkit-animation: warn 3s ease-in;
  -moz-animation: warn 3s ease-in;
  opacity: 0;

  animation-iteration-count: infinite;
  -webkit-animation-iteration-count: infinite;
  -moz-animation-iteration-count: infinite;
}
.dynamic_plot {
   width:32px;
  height:32px;
  opacity: 0;  /*透明*/
 
  animation: warn 3s linear;
    -webkit-animation: warn 3s ease-in-out;
    -moz-animation: warn 3s ease-in-out;
 
/*规定动画无限次播放*/
    -webkit-animation-iteration-count: infinite;
    -moz-animation-iteration-count: infinite;
    animation-iteration-count: infinite;
    
}


@keyframes warn {
    100% {
          opacity: 1;
          transform: scale(1);
        -webkit-transform: scale(1);
    }
 
    75% {
              opacity: 0.8;
              transform: scale(0.6);
        -webkit-transform: scale(0.6);
    }
 
  
}
